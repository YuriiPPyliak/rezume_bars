<section class='row gy-4'>
    {{#with newsOtherBlock}}
        <h2 class='text-center'>{{title}}</h2>
        {{#each cards}}
            <div class='col-3'>
                <div class='card h-100 text-bg-dark'>
                    <div class='card-header'>
                        {{title}}
                        {{#if isTop}}
                            <span class='badge text-bg-danger rounded-pill ms-2'>Top</span>
                        {{/if}}
                        {{#if idNew}}
                            <span class='badge text-bg-success rounded-pill ms-2'>New</span>
                        {{/if}}
                    </div>
                    <div class='card-body'>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    {{/with}}
</section>