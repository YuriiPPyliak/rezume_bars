<main>
    <section>
        {{#with navigation}}
            <div class='card mb-5'>
                <nav class='navbar'>
                    <div class='container-fluid'>
                        <span class='navbar-brand'>{{Logo}}</span>
                        <div class='nav'>
                            {{#each links}}
                                {{#if @last}}
                                    <div class='nav-item'>
                                        <span class='nav-link disabled'>
                                            {{text}}
                                        </span>
                                    </div>
                                {{else}}
                                    <div class='nav-item'>
                                        <a href='{{href}}' class='nav-link active'>
                                            {{text}}
                                        </a>
                                    </div>
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </nav>
            </div>
        {{/with}}
    </section>

    <section class='row gy-4'>
        {{#with newsBlock}}
            {{#each cards}}
                <div class='col-6'>
                    <div class='card h-100 text-bg-dark'>
                        <div class='card-header'>
                            {{title}}
                            {{#if isTop}}
                                <span class='badge text-bg-danger rounded-pill ms-2'>Top</span>
                            {{/if}}
                            {{#if isNew}}
                                <span class='badge text-bg-success rounded-pill ms-2'>New</span>
                            {{/if}}
                        </div>
                        <div class='card-body'>
                            <p>{{description}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{/with}}
    </section>

    <hr class='my-5' />

    {{!-- Спроба 1
    <section class='row'>
        {{#with goodsBlock}}
            <div class='col-12'>
                <div class='nav nav-tabs'>
                    {{#each tabs}}
                    {{#if tabs}}
