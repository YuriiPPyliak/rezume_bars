    <section class='row'>
        {{#with goodsBlock}}
            <div class='col-12 mb-4'>
                <div class='nav nav-tabs'>
                    {{#each tabs}}
                        {{#if isActive}}
                            <div class='nav-item'>
                                <span class='nav-link active'>{{text}}</span>
                            </div>
                        {{else}}
                            {{#if isDisabled}}
                                <div class='nav-item'>
                                    <span class='nav-link disabled'>{{text}}</span>
                                </div>
                            {{else}}
                                <div class='nav-item'>
                                    <span class='nav-link'>{{text}}</span>
                                </div>
                            {{/if}}
                        {{/if}}
                    {{/each}}
                </div>
            </div>

            <div class='row gy-4'>
                {{#each cards}}
                    <div class='col-4'>
                        <div class='card'>
                            <img src='{{image}}' alt='#' class='card-img-top' />
                            <div class='card-body'>
                                <h5 class='card-title'>
                                    {{title}}
                                    {{#if isHot}}
                                        <sup><span class='badge rounded-pill text-bg-warning text-uppercase'>Hot!</span></sup>
                                    {{/if}}
                                    {{#if isNew}}
                                        <sup><span class='badge rounded-pill text-bg-primary'>New</span></sup>
                                    {{/if}}
                                </h5>
                                <div class='card-text'>{{description}}</div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{/with}}
    </section>

    <hr class='my-5' />

    <section class='row'>
        {{#with subscribe}}
            <div>
                <div class='card'>
                    <div class='card-body d-flex align-items-center'>
                        <div class='flex-grow-1'>
                            <h2>{{header}}</h2>
                            <p>{{description}}</p>
                        </div>
                        {{#each buttons}}
                            <div>
                                <a href='{{link}}' class='btn btn-primary mx-2'>{{text}}</a>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        {{/with}}
    </section>

    <hr class='my-5' />
</main>