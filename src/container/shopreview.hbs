<main>
    {{> shopheader}}

    {{#with formBlock}}
        <section class='row'>
            <div class='col-8'>
                <h1 class='mt-5'>{{header}}</h1>
                {{#with rating}}
                    <div class='mt-4'>
                        <span>{{title}}</span>
                        <span>{{value}}</span>
                    </div>
                {{/with}}

                {{#with actionBlock}}
                    <div class='nav nav-tabs mt-4'>
                        {{#each tabs}}
                            <div class='nav-item'>
                                {{#if isActive}}
                                    <a href='#' class='nav-link active fw-medium'>{{text}}</a>
                                {{else}}
                                    <a href='#' class='nav-link'>{{text}}</a>
                                {{/if}}
                            </div>
                        {{/each}}
                    </div>
                    <hr style='border: 1px solid black;' class='my-5' />

                    {{#with report}}
                        <div class='card'>
                            <div class='card-body'>
                                <p>{{title}}</p>
                                {{#with button}}
                                    <div>
                                        <a href='{{link}}' target='_blank' class='btn btn-secondary'>{{text}}</a>
                                    </div>
                                {{/with}}
                            </div>
                        </div>
                        <hr style='border: 1px solid black;' class='my-5' />
                    {{/with}}
                {{/with}}
                {{#with feedbackBlock}}
                    <h2 class='mb-5'>{{title}}</h2>
                    {{#each buttons}}
                        {{#if isWarning}}
                            <a href='{{link}}' target='_blank' class='btn btn-warning'>{{text}}</a>
                        {{else}}
                            {{#if isSuccess}}
                                <a href='{{link}}' target='_blank' class='btn btn-success ms-3'>{{text}}</a>
                            {{else}}
                                {{#if isDanger}}
                                    <a href='{{link}}' target='_blank' class='btn btn-danger ms-3'>{{text}}</a>
                                {{/if}}
                            {{/if}}
                        {{/if}}
                    {{/each}}
                    <hr style='border: 1px solid black;' class='my-5' />
                {{/with}}
            </div>

            <div class='col-4'>
                {{#with goodsInfo}}
                    <div class='card'>
                        <div class='card-body'>
                            <img src='{{photo}}' alt='lorem photo' />
                            <h5 class='mt-3'>{{name}}</h5>
                        </div>
                    </div>
                    <div class='card my-3'>
                        <div class='card-body'>
                            <h4>{{price}}</h4>
                            {{#if inMarket}}
                                <p>Є в наявності</p>
                            {{/if}}
                            {{#each buttons}}
                                {{#if isPrimary}}
                                    <div>
                                        <a href='{{link}}' class='btn btn-primary'>{{text}}</a>
                                    </div>
                                {{else}}
                                    {{#if isSecondary}}
                                        <div class='mt-3'>
                                            <a href='{{link}}' class='btn btn-secondary'>{{text}}</a>
                                        </div>
                                    {{/if}}
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    <div class='card'>
                        <div class='card-body'>
                            {{#with seller}}
                                <span>{{title}}</span>
                                <span class='fw-bold'>{{value}}</span>
                            {{/with}}
                        </div>
                    </div>
                {{/with}}
            </div>
        </section>
    {{/with}}

    {{#each reviewList}}
        <div class='card p-3 mb-5'>
            <div class='card mb-4'>
                {{#with title}}
                    <div class='card-header'>
                        <h5>{{userName}}</h5>
                        <p>{{caption}}</p>
                        <span>{{date}}</span>
                    </div>
                {{/with}}
                {{#with reviewBody}}
                    <div class='card-body'>
                        {{#with seller}}
                            <div>
                                <span>{{title}}</span>
                                <span>{{value}}</span>
                            </div>
                        {{/with}}
                        {{#with rating}}
                            <div class='mt-3'>
                                <span>{{title}}</span>
                                <span>{{value}}</span>
                            </div>
                        {{/with}}
                        {{#each text}}
                            <p class='mt-3'>{{this}}</p>
                        {{/each}}
                        {{#with advantages}}
                            <h6 class='m-0'>{{title}}</h6>
                            <p>{{text}}</p>
                        {{/with}}
                        {{#with disadvantages}}
                            <h6 class='m-0'>{{title}}</h6>
                            <p>{{text}}</p>
                        {{/with}}
                        {{#each images}}
                            <img src='{{this}}' alt='lorem photo' class='rounded' />
                        {{/each}}
                    </div>
                {{/with}}
            </div>

            <div class='row'>
                <div class='col-1 invisible'>Empty row</div>
                <div class='col-11'>
                    {{#with reviewBody}}
                        {{#each coments}}
                            <div class='card mb-4'>
                                <div class='card-body'>
                                    <div>
                                        <h5>{{userName}}</h5>
                                        <span>{{date}}</span>
                                        <p>{{text}}</p>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{/with}}
                </div>
            </div>
        </div>
    {{/each}}

    {{> shopaction}}

    <hr style='border: 1px solid black;' class='mt-5' />

    {{> shopfooter}}

</main>