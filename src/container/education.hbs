<div>
    {{#with main}}
    <main>
        <section>
            <h2>{{> title data="My educations" big=true}}</h2>
            <ul>
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd}}
                    -- (In process studing)
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            <h2>{{> title data="My certificates" big=false}}</h2>
            <ul>
                {{#each certificates}}
                <li>
                    {{name}} ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>