<main>
    {{> shopheader}}

    <section>
        {{#with header}}
            <h1>{{title}}</h1>
            {{#with button}}
                <a href='{{link}}' class='btn btn-outline-secondary mt-2'>{{text}}</a>
            {{/with}}
        {{/with}}
    </section>

    <hr class='mt-5 mb-4' />

    <section class='row'>
    {{#each goodsBlock}}
        <div class='card p-2 gy-4'>
            <div class='row align-items-center'>
                <img src='{{image}}' alt='lorem image' class='col-2 rounded' />
                <div class='col-4'>
                    <h2>{{name}}</h2>
                    <p>{{description}}</p>
                </div>
                {{#with price}}
                    <div class='col-1'>
                        <span>{{title}}</span>
                        <br />
                        <h6>{{value}}</h6>
                    </div>
                {{/with}}
                <span class='col-1 text-center'>{{amount}}</span>
                <div class='col-2 invisible'>Empty row</div>
                <div class='col-2'>
                    {{#each buttons}}
                        {{#if isPrimary}}
                            <button class='btn btn-primary'>{{text}}</button>
                        {{/if}}
                        {{#if isDanger}}
                            <button class='btn btn-outline-danger mt-4'>{{text}}</button>
                        {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    {{/each}}
    <hr class='my-5' />
</section>

    <section>
        {{#with total}}
            <h2>{{title}}</h2>
            <span class='display-6 fw-medium'>{{amount}}</span>
            <div class='mt-2'>{{delivery}}</div>
            {{#each buttons}}
                {{#if isSuccess}}
                    <div>
                        <a href='{{link}}' target='_blank' class='btn btn-success mt-4'>{{text}}</a>
                    </div>
                {{else}}
                    {{#if isOutline}}
                        <div>
                            <a href='{{link}}' target='_blank' class='btn btn-outline-success mt-3'>{{text}}</a>
                        </div>
                    {{/if}}
                {{/if}}
            {{/each}}
            <hr class='my-5' />
        {{/with}}
    </section>

    {{> shopcard}}

    <hr class='my-5' />

    <section class="mb-5">
        {{#with subscribe}}
            <div class='card text-bg-dark'>
                <div class='card-body'>
                    <h2>{{header}}</h2>
                    <p class='my-4'>{{description}}</p>
                    {{#each buttons}}
                        {{#if @last}}
                            <div>
                                <a href='{{link}}' target='_blank' class='btn btn-primary mt-3'>{{text}}</a>
                            </div>
                        {{else}}
                            <a href='{{link}}' target='_blank' class='btn btn-primary'>{{text}}</a>
                        {{/if}}
                    {{/each}}
                </div>
            </div>
        {{/with}}
    </section>

	<hr class='mb-1' />`

	{{> shopfooter}}

</main>