<main>
    {{> shopheader}}

    {{> breadcrumb}}

    <section>
        {{#with newsData}}
            <div class='row mt-3'>
                <img class='col-12' src='{{photo}}' alt='random photo' />
            </div>

            {{#with head}}
                <h1 class='my-3'>{{heading}}</h1>
                <p>{{description}}</p>
            {{/with}}

            <ul>
                {{#each body}}
                    <li>
                        <h4>{{title}}</h4>
                        <p>{{text}}</p>
                    </li>
                {{/each}}
            </ul>
        {{/with}}
    </section>

    <hr class='my-5' />

    {{> shoppost}}

    <hr class='my-5' />

    {{> shopaction}}

    <hr class='my-5' />

    {{> shopfooter}}

</main>